<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Group List View -->
    <record id="view_telegram_group_tree" model="ir.ui.view">
        <field name="name">telegram.group.tree</field>
        <field name="model">telegram.group</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="group_type"/>
                <field name="member_count"/>
                <field name="team_member_count"/>
                <field name="message_count"/>
                <field name="is_monitored"/>
            </list>
        </field>
    </record>

    <!-- Group Form View -->
    <record id="view_telegram_group_form" model="ir.ui.view">
        <field name="name">telegram.group.form</field>
        <field name="model">telegram.group</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_copy_invite_link" string="ðŸ“Ž Copy Invite Link" type="object" 
                            class="btn-primary" invisible="not invite_link"/>
                    <button name="action_regenerate_invite_link" string="ðŸ”„ Regenerate Link" type="object" 
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_copy_invite_link" icon="fa-link"
                                invisible="not invite_link">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Invite Link</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="chat_id"/>
                            <field name="chat_type"/>
                            <field name="group_type"/>
                        </group>
                        <group>
                            <field name="is_monitored"/>
                            <field name="member_count"/>
                            <field name="team_member_count"/>
                            <field name="message_count"/>
                        </group>
                    </group>
                    <group string="Invite Link" invisible="not invite_link">
                        <field name="invite_link" widget="url"/>
                        <field name="invite_link_created_at"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Members">
                            <field name="member_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="username"/>
                                    <field name="telegram_id"/>
                                    <field name="is_team_member" string="Team"/>
                                    <field name="is_bot"/>
                                    <field name="is_active"/>
                                    <field name="join_date"/>
                                    <field name="left_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Messages">
                            <field name="message_ids">
                                <list>
                                    <field name="message_date"/>
                                    <field name="member_id"/>
                                    <field name="message_text"/>
                                    <field name="is_from_team" string="Team"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_telegram_group" model="ir.actions.act_window">
        <field name="name">Telegram Groups</field>
        <field name="res_model">telegram.group</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_telegram_groups" name="Groups" parent="menu_telegram_root" action="action_telegram_group" sequence="20"/>
</odoo>